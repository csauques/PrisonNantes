
<html>
    <head>
      <title>Choix d'une affaire</title>
      <link rel="stylesheet" href="../css/menu.css">
      <link rel="stylesheet" href="../css/style.css">
    </head>

    <header>
        <nav>
            <ul id="menu">
                <li><a href="/incarcerer">Incarcérer un prisonnier</a></li>
                <li><a href="/deciderCondamnation">Condamnation</a></li>
                <li><a href="/deciderReductionPeine">Reduction de peine</a></li>
                <li><a href="/deciderLiberationDefinitive">Liberté définitive</a></li>
                <li><a href="/preventive">Prisonniers en préventive</a></li>
            </ul>
        </nav>
    </header>
    <body>
        <h1>Choisir un motif</h1>
        <form action="" method="post">
          <% for(var i=0; i<motifs.length; i++){ %>
              <div>
                  <label> <input type="radio" name="n_motif" value=<%= motifs[i].n_motif %> id=<%= motifs[i].n_motif %> /> <%= motifs[i].n_motif %> :  <%= motifs[i].libelle_motif %></label>
              </div>

          <% } %>
          <div>
              <label> Nouveau motif </label>
               <input type="radio" name="n_motif" value="-1" id="-1" />
          </div>
          <div>
              <input type="submit" value="Envoyer" />
          </div>
        </form>
    </body>
</html>
